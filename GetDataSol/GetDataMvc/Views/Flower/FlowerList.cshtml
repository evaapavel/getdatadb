@model FlowerListViewModel
@using GetDataMvc.BusinessObjects

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    this.ViewData["Title"] = "List of Flowers";
}

<h2>List of Flowers</h2>

<table>
    <tr>
        @* <th>ID</th> *@
        <th>Species</th>
        <th><div style="width: 10px;"></div></th>
        @* <th>Prevailing Color</th> *@
        <th>Prevailing Color</th>
    </tr>
    @foreach (Flower flower in this.Model.Flowers)
    {
<tr>
    @* <td>@flower.ID</td> *@
    <td><a href="/flowers/detail/@flower.ID">@flower.Species</a></td>
    <td></td>
    @* <td>@flower.PrevailingColor</td> *@
    @* <td><div style="width: 100px; height: 100px; color: @(flower.PrevailingColor.ToString().ToLower())"></div></td> *@
    @* <td><div style="width: 50px; height: 50px; background-color: @(flower.PrevailingColor.ToString().ToLower());"></div></td> *@
    <td><div style="width: 50px; height: 50px; background-color: @(ColorHelper.ToHtmlColor(flower.PrevailingColor));"></div></td>
</tr>
    }
</table>

