@model FlowerDetailViewModel
@using GetDataMvc.BusinessObjects

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    this.ViewData["Title"] = "Detailed Info on a Flower";
}


<h2>Detailed Info on a Flower</h2>


<table>
    <tr>
        <th>ID:</th>
        <td>@this.Model.Flower.ID</td>
    </tr>
    <tr>
        <th>Species:</th>
        <td>@this.Model.Flower.Species</td>
    </tr>
    <tr>
        <th>Prevailing Color:</th>
        <td>@this.Model.Flower.PrevailingColor</td>
    </tr>
</table>

<br />
<br />


<a href="/flowers/list">Back to the list of flowers</a>

